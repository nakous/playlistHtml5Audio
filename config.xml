<?xml version='1.0' encoding='utf-8'?>
<widget id="com.imorug.amazigh" version="2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Amazigh Music</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Nakous mustapha
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
		<preference name="Fullscreen" value="true" />
	<preference name="Orientation" value="portrait" />
	<feature name="SocialSharing">
	  <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
	</feature>
	<icon platform="android" density="ldpi" src="www/res/icons/android/icon36ldpi.png" />
    <icon platform="android" density="mdpi" src="www/res/icons/android/icon48mdpi.png" />
    <icon platform="android" density="hdpi" src="www/res/icons/android/icon72hdpi.png" />
    <icon platform="android" density="xhdpi" src="www/res/icons/android/icon96xhdpi.png" />

	 <platform name="android">
		<!-- you can use any density that exists in the Android project -->
		<splash src="www/img/scrol.png" density="land-hdpi"/>
		<splash src="www/img/scrol.png" density="land-ldpi"/>
		<splash src="www/img/scrol.png" density="land-mdpi"/>
		<splash src="www/img/scrol.png" density="land-xhdpi"/>

		<splash src="www/img/scrol.png" density="port-hdpi"/>
		<splash src="www/img/scrol.png" density="port-ldpi"/>
		<splash src="www/img/scrol.png" density="port-mdpi"/>
		<splash src="www/img/scrol.png" density="port-xhdpi"/>
	</platform>
	 
<preference name="SplashScreenDelay" value="10000" />
</widget>
